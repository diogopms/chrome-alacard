{
    "manifest_version": 2,
    "name":  "alacard",
    "version": "0.0.1",
    "description": "Get the balance of your alacard account in your browser",
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_title": "alacard",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
        "tabs", "https://www.alacard.pt/*",
        "cookies", "storage", 
        "http://*/*.alacard.pt"
    ]
}