{
    "manifest_version": 2,
    "name":  "alacard",
    "version": "1.1.0",
    "description": "Consulte o saldo e movimentos do seu cart√£o BES a la card no browser",
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_title": "alacard",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "https://www.euroticket-alacard.pt/*",
        "http://www.euroticket-alacard.pt/*",
        "https://www.alacard.pt/*",
        "storage"
    ]
}
